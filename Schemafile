# vim :set filetype=ruby
create_table "users", force: :cascade do |t|
  t.string "uid", null: false
  t.index "uid", unique: true
end

create_table "channels", force: :cascade do |t|
  t.string "channel_id", null: false
  t.string "name", null: false
  t.text "icon_url", null: false
  t.index "channel_id", unique: true
end

create_table "videos", force: :cascade do |t|
  t.string "video_id", null: false
  t.string "channel_id", null: false
  t.string "title", null: false
  t.string "thumbnail_url", null: false
  t.string "url", null: false
  t.index ["video_id", "channel_id"], unique: true
end

create_table "songs", force: :cascade do |t|
  t.string "video_id", null: false
  t.integer "user_id", null: false
  t.string "title", null: false
  t.bigint "start_timestamp", null: false
  t.bigint "end_timestamp", null: false
  t.index "video_id"
  t.index "user_id"
end


add_foreign_key "videos", "channels", primary_key: "channel_id", name: "fk_videos_channels"
add_foreign_key "songs", "users", name: "fk_songs_users"
